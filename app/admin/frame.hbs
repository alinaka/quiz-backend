<form action="/admin/upload" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Movie</label>
        <div class="col-sm-10">
            <select class="form-control" name="movie" id="movie">
                <option value="{{null}}">Выберите фильм из списка</option>
                {{#each movies}}
                    <option value="{{this.id}}">{{this.title}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Movie title</label>
        <div class="col-sm-10">
            <input type="text" name="title" id="title">
        </div>
    </div>
    <div class="form-group row">
        <label for="internationalTitle" class="col-sm-2 col-form-label">Movie international title</label>
        <div class="col-sm-10">
            <input type="text" name="internationalTitle" id="internationalTitle">
        </div>
    </div>
    <div class="form-group row">
        <label for="year" class="col-sm-2 col-form-label">Movie production year</label>
        <div class="col-sm-10">
            <input type="number" name="year" id="year">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="file" name="frame" class="form-control" id="inputGroupFile02">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Post</button>
        </div>
    </div>
</form>